{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "sourceMap": false,
    "declarationMap": false,
    "inlineSources": false,
    "removeComments": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "./dist-min"
  },
  "exclude": [
    "node_modules",
    "dist",
    "dist-min",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.d.ts",
    "**/*.spec.d.ts",
    "src/**/__tests__/**",
    "src/**/__mocks__/**",
    "src/test-utils/**",
    "vitest.config.ts",
    "eslint.config.ts"
  ]
}